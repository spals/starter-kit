    "version": "0.2.0",
    "configurations": [
        {
            "name": "GrpcServer",
            "mode": "auto",
            "program": "${workspaceRoot}/grpc",
            "request": "launch",
            "type": "go",

            "env": {
                "GRPC_SERVER_DEV": true,
                "GRPC_SERVER_PORT": 8081,
            },
            "args": []
        },
        {
            "name": "HTTPServer",
            "mode": "auto",
            "program": "${workspaceRoot}/http",
            "request": "launch",
            "type": "go",

            "env": {
                "HTTP_SERVER_DEV": true,
                "HTTP_SERVER_PORT": 8080,
            },
            "args": []
        }
    ]
}